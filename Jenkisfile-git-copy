pipeline {
    agent { label 'slave' }

    stages{
        stage('template copy'){
            steps {
                git url: 'https://github.com/mohammadtariqayub/jenkins.aws.cloudformation.git'
                sh "cp single_instance_tariq.yaml /root/jenkins.aws.templates/single_instance_tariq.yaml"
            }
        }
        stage('Build ec2') {
            steps {   
                script{
                    dir('ec2'){ 
                        build( 
                            job: 'Build ec2',
                            parameters:
                            [string(name: 'SubnetId', value: "${params.SubnetId}"),
                            string(name: 'BucketName', value: "${params.BucketName}"),
                            string(name: 'ImageId', value: "${params.ImageId}")]
                            ]
                        sh '/root/.local/lib/aws/bin/aws s3 ls s3://${params.BucketName}'    
                        )
                    }
                }
                
            }
        }
    }
}
